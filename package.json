{
  "name": "thepocker",
  "version": "1.0.0",
  "description": "The pocker - multiplayer browser game ",
  "main": "dist/index.js",
  "scripts": {
    "watch:ui": "cd ui && npm start",
    "watch:server": "nodemon server/dist/index.js",
    "build:dev": "webpack --env.NODE_ENV=development",
    "build:ui": "cd ui && npm run build",
    "build": "webpack --env.NODE_ENV=production", 
    "debug": "nodemon server/dist/index.js"
  },
  "keywords": [
    "game",
    "cards",
    "multiplayer"
  ],
  "workspaces": [
    "server",
    "ui"
  ],
  "author": "Yevhen Kifiak",
  "license": "ISC",
  "dependencies": {
    "typescript": "^3.8.3",
    "webpack": "4.42.0",
    "webpack-cli": "^3.3.11",
    "express": "^4.17.1",
    "socket.io": "^2.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/node": "^13.9.5",
    "@types/socket.io": "^2.1.4",
    "copy-webpack-plugin": "^5.1.1",
    "nodemon": "^2.0.2",
    "ts-loader": "^6.2.2",
    "webpack-dev-server": "^3.10.3",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0"
  }
}
